<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:clickable="true"
	android:focusable="true" android:background="@drawable/action_item_btn">

	<FrameLayout android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_margin="2dp">
		<ImageView android:id="@+id/iv_icon" android:layout_width="28sp"
			android:layout_height="28sp" />
		<ImageView android:id="@+id/iv_enabled"
			android:layout_width="28sp" android:layout_height="28sp"
			android:src="@drawable/selected" />
	</FrameLayout>

	<TextView android:id="@+id/tv_title" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:gravity="center_vertical"
		android:paddingLeft="5dp" android:paddingRight="12dp" android:text="Chart"
		android:textColor="#fff" />

</LinearLayout>         